<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.blockchain.componentlib.divider.HorizontalDividerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="@dimen/very_small_spacing"
        android:requiresFadingEdge="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/settings_limits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.divider.HorizontalDividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/settings_wallet_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.divider.HorizontalDividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/settings_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.divider.HorizontalDividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/settings_exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.divider.HorizontalDividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/settings_wallet_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.divider.HorizontalDividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/settings_airdrops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.blockchain.componentlib.divider.HorizontalDividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>