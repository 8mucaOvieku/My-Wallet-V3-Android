<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.blockchain.componentlib.sectionheader.SmallSectionHeaderView
        android:id="@+id/item_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.blockchain.componentlib.alert.CardAlertView
        android:id="@+id/item_error_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginTop="@dimen/very_small_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        android:layout_marginBottom="@dimen/very_small_spacing" />

</androidx.appcompat.widget.LinearLayoutCompat>
