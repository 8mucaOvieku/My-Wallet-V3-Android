<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.blockchain.componentlib.sectionheader.SmallSectionHeaderView
        android:id="@+id/wallets_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_wallets"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.blockchain.componentlib.tablerow.DefaultTableRowView
        android:id="@+id/asset_details_not_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.blockchain.componentlib.tablerow.BalanceTableRowView
        android:id="@+id/asset_details_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/cta_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/medium_margin"
        android:paddingVertical="@dimen/small_margin">

        <com.blockchain.componentlib.button.SmallMinimalButtonView
            android:id="@+id/copy_address_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Space
            android:layout_width="@dimen/tiny_margin"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.button.SmallMinimalButtonView
            android:id="@+id/receive_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>