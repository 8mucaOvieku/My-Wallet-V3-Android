<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/standard_spacing"
    android:paddingBottom="@dimen/standard_spacing">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_verification_badge"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/standard_spacing"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        style="@style/Text.Semibold.20"
        android:text="@string/kyc_upsell_custodial_dlg_title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sheet_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        style="@style/Text.Standard.14"
        android:text="@string/kyc_upsell_custodial_dlg_body"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sheet_bullet_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bullet_1"
        android:layout_marginTop="@dimen/large_spacing"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        app:layout_constraintTop_toBottomOf="@id/sheet_body"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_subtitle_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sheet_bullet_1"
        app:layout_constraintStart_toEndOf="@id/sheet_bullet_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/small_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        style="@style/Text.Semibold.14"
        android:text="@string/kyc_upsell_custodial_dlg_item_title_1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_item_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sheet_subtitle_1"
        app:layout_constraintStart_toStartOf="@id/sheet_subtitle_1"
        app:layout_constraintEnd_toEndOf="@id/sheet_subtitle_1"
        style="@style/Text.Standard.12"
        android:text="@string/kyc_upsell_custodial_dlg_item_body_1"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sheet_bullet_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bullet_2"
        android:layout_marginTop="@dimen/large_spacing"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        app:layout_constraintTop_toBottomOf="@id/sheet_item_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_subtitle_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sheet_bullet_2"
        app:layout_constraintStart_toEndOf="@id/sheet_bullet_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/small_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        style="@style/Text.Semibold.14"
        android:text="@string/kyc_upsell_custodial_dlg_item_title_2"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_item_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sheet_subtitle_2"
        app:layout_constraintStart_toStartOf="@id/sheet_subtitle_2"
        app:layout_constraintEnd_toEndOf="@id/sheet_subtitle_2"
        style="@style/Text.Standard.12"
        android:text="@string/kyc_upsell_custodial_dlg_item_body_2"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sheet_bullet_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bullet_3"
        android:layout_marginTop="@dimen/large_spacing"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        app:layout_constraintTop_toBottomOf="@id/sheet_item_2"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_subtitle_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sheet_bullet_3"
        app:layout_constraintStart_toEndOf="@id/sheet_bullet_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/small_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        style="@style/Text.Semibold.14"
        android:text="@string/kyc_upsell_custodial_dlg_item_title_3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_item_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sheet_subtitle_3"
        app:layout_constraintStart_toStartOf="@id/sheet_subtitle_3"
        app:layout_constraintEnd_toEndOf="@id/sheet_subtitle_3"
        style="@style/Text.Standard.12"
        android:text="@string/kyc_upsell_custodial_dlg_item_body_3"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verify_now_cta"
        style="@style/CtaButton.Blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_spacing"
        android:text="@string/kyc_upsell_custodial_dlg_cta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_item_3" />

</androidx.constraintlayout.widget.ConstraintLayout>